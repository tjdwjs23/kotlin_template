{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{template.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{template.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="author"> 작성자</label>
                <input type="text" class="form-control" id="author" value="{{template.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용</label>
                <textarea class="form-control" id="content" readonly>{{template.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">뒤로가기</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정</button>
    </div>
</div>

{{>layout/footer}}